<div class="span3" style="margin-left:10px;">
    <div class="span12 shadow-box" style="margin-left:10px;">
        <div class="span12" style="margin-top:30px">
            <h3 class="aside-title" style="margin-left:10px">个人资料</h3>
            <div class="span2">
                <section class="user_info">
                    <h1 style = "">
                        <%= gravatar_for current_user, size: 80 %>
                    </h1>
                </section>
            </div>
            <div class="span8 user-info-digest">
                <div>
                    <h3><%= current_user.nickname%></h3>
                    <div>
                        <%= link_to "关注:#{current_user.followings.count}", followings_user_path(current_user), class: :focus_link%>
                        <%= link_to "粉丝:#{current_user.followeds.count}", followeds_user_path(current_user), class: :focus_link%>
                    </div>
                    <div id="focus_btn0" style="padding-left:10px;display:inline-block">
                        <%= render partial: "users/focus_btn", locals: {index: 0, following: current_user}%>
                    </div>
                </div>
                <hr/>
            </div>
            <button id="newButton" type="button" class="btn btn-small btn-warning" style="margin-left:50px;margin-top:50px;margin-bottom:50px;width:150px;height:30px;border-radius:16px!important;">
               <% if log_in?%>
                 <%=link_to yield(:write_path),method: :get do%>
                   <i class="halflings-icon white edit"></i>
                   <p style="display:inline;font-size:14px"><strong>我要发布</strong></p>
                 <%end%>
              <%else%>
                 <%= link_to login_path(:message => "请先登录") do%>
                    <i class="halflings-icon white edit"></i>
                    <p style="display:inline;font-size:14px"><strong>我要发布</strong></p>
                 <%end%>
              <%end%>
            </button>
        </div>
    
    </div>
    <div class="span12 shadow-box" style="margin-left:10px;margin-top:10px">
        <div class="row-fluid">
            <h2>发表的知识</h2>
        </div>
        <div class="row-fluid ">
            <div class="span12">
               <hr style="background-color:grey"/> 
            </div>
        </div>
        <% query = ["Question", "Blog", "Resource"]%>
        <% @creatings = current_user.creatings.where(type: query)[0...5]%>
        <% @creatings.each_with_index do |creating, index|%>
        <div class="row-fluid" data-index="<%= index%>">
            <div class="row-fluid span11 offset1">
                <div class="span8">
                    <%=link_to "[#{creating.chinese_type}]", creatings_user_path(current_user, type: creating.type), class: "creating-title"%>
                        
                    <%=link_to "《#{creating.title}》", creating.to_path, class: "creating-title"%>
                        
                </div>
                <div class="span4" style="">
                    <strong>浏览量：</strong>
                    <span><%= creating.visit_count%></span>
                </div>
                      
            </div>
                    
        </div>
        <div class="row-fluid span11">
            <hr class="normal-hr"/>
        </div>
        <% end %>
    </div>
</div>
<style>
aside div.aside-box h3.aside-title{padding:16px 16px 0;font-size:14px;color:#333;}
aside div.aside-box h3.aside-title::before{display:inline-block;margin-right:8px;content:'';width:4px;height:22px;vertical-align:-6px;background-color:#ca0c16;}
</style>