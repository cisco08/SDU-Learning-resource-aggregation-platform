        



<% provide(:title, '全部课程') %>
<div id="container-fluid-full"> 

    <div id="row-fluid">
      <%= render :partial => "admins/row_nav" %>
      <div id="content" class="span8">
        
        <p id="notice"><%= notice %></p>
        
        <h1>全部课程</h1>
        <hr>
        
        <table class="table table-hover">
          <thead>
            <tr>
              <th>课程序号</th>
              <th>课程名</th>
              <!--<th>Knowledge</th>-->
              <th>教师</th>
              <!--<th>Teacher relationship</th>-->
              <th>学院</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.id %></td>
                <td><%= course.course_name %></td>
                <!--<td><%#= course.knowledges %></td>-->
                <td><%= link_to '授课教师', courses_course_teachers_index_path(course) %></td>
                <!--<td><%#= course.teacher_relationship %></td>-->
                <td><%= link_to '所属学院',courses_course_departments_index_path(course) %></td>
                <td><%= link_to '详情', course %></td>
                <td><%= link_to '编辑', edit_course_path(course) %></td>
                <td><%= link_to '删除', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <br>
        
        <%= link_to '新增课程', new_course_path %>
      </div> 
    </div>
</div> 

<div class="clearfix"></div>