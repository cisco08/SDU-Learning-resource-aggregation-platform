

<% provide(:title, '学院管理') %>
<div id="container"> 
    <!--headerleft --> 
    <div id="header">
        
    </div> 
    <div id="left">
      <%= render :partial => "admins/row_nav" %>
    </div> 

    <div id="right"> 
      <div id="content" class="span10">
      <p id="notice"><%= notice %></p>

      <h1>Departments</h1>
      
      <table>
        <thead>
          <tr>
            <th>Id</th>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @departments.each do |department| %>
            <tr>
              <td><%= department.id %></td>
              <td><%= department.name %></td>
              <td><%= link_to 'Show', department %></td>
              <td><%= link_to 'Edit', edit_department_path(department) %></td>
              <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      <%= link_to 'New Department', new_department_path %>
        
       
    </div> 
    </div>
</div> 

<div class="clearfix"></div>
