

<% provide(:title, '学院管理') %>
<div class="container-fluid-full"> 
    <!--headerleft --> 

<div class="row-fluid">
      <%= render :partial => "admins/row_nav" %>



      <div id="content" class="span10">
      <p id="notice"><%= notice %></p>

      <h1>全部学院</h1>
      <hr>
      
      <table class="table table-hover">
        <thead>
          <tr>
            <th>学院编号</th>
            <th>学院名称</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @departments.each do |department| %>
            <tr>
              <td><%= department.id %></td>
              <td><%= department.name %></td>
              <td><%= link_to '详情', department %></td>
              <td><%= link_to '编辑', edit_department_path(department) %></td>
              <td><%= link_to '删除', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      <%= link_to '新增学院', new_department_path %>
        
       
    </div> 
</div>
</div> 

<div class="clearfix"></div>
