<% provide(:title, '学院详情') %>

<div id="container-fluid-full"> 
    <!--headerleft --> 
    <div id="row-fluid">
      <div id="header">
          
      </div> 
  
      <!--<div id="sidebar-left" class="span2">-->
      <%= render :partial => "admins/row_nav" %>
      <!--</div> -->
  

      <div id="content" class="span10">
        <p id="notice"><%= notice %></p>

        <h3>学院</h3>
        <h1>
          <strong><%= @department.name %></strong>
          
        </h1>
        <hr>
        
        <table class="table table-hover">
          <h3>下属课程</h3>
          <thead>
            <tr>
              <th>课程序号</th>
              <th>课程名</th>
              <th colspan="1"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @course_department_associations = @department.course_department_associations %>
            <% @course_department_associations.each do |associations| %>
              <% @course = associations.course %>
              <tr>
                <td><%= @course.id %></td> 
                <td><%= @course.course_name %></td>
                <!--<td><%#= link_to 'Show', department %></td>-->
                <!--<td><%#= link_to 'Edit', edit_department_path(department) %></td>-->
                <td><%= link_to '删除关联', departments_deleteCourseDeptAss_path(@department,@course), data: { confirm: 'Are you sure????' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <%= link_to '编辑学院名', edit_department_path(@department) %> |
        <%= link_to '新建关联', departments_newcourseass_path(@department) %> |
        <%= link_to '返回', departments_path %> 

      </div> 
    </div>
</div> 

<div class="clearfix"></div>
