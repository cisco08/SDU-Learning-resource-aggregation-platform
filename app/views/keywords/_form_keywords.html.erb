  $(function(){  
  
    $('#keyword_relationship_higher_id').bind('input propertychange', function() {
      var keyword_id = $(this).val()
      $.get("/keywords/ajaxkeywordnamehigh/"+keyword_id,
      function(data,status){}); 
    }); 
  });
  
</script>

