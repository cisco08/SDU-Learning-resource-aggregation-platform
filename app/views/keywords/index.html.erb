        


<% provide(:title, '全部关键字') %>
<div id="container-fluid-full"> 

    <div id="row-fluid">
      <%= render :partial => "admins/row_nav" %>
      <div id="content" class="span8">
        <p id="notice"><%= notice %></p>
        
        <h1>全部关键字</h1>
        
        <table>
          <thead>
            <tr>
              <th>序号</th>
              <th>关键字名</th>
              <!--<th>Course</th>-->
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @keywords.each do |keyword| %>
              <tr>
                <td><%= keyword.id %></td>
                <td><%= keyword.name %></td>
                <!--<td><%#= link_to '已关联课程',"#" %></td>-->
                <td><%= link_to '详情', keyword %></td>
                <td><%= link_to '编辑关键字名', edit_keyword_path(keyword) %></td>
                <td><%= link_to '删除', keyword, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <br>
        
        <%= link_to '新建关键字', new_keyword_path %> |
        <%= link_to '新建上下级关联', keywords_newkeywordass_path %>
      </div> 
    </div>
</div> 

<div class="clearfix"></div>
