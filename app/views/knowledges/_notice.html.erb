<%if !notice.nil?%>
    <div class="alert alert-success">
        	<button type="button" class="close" data-dismiss="alert">×</button>
        	<strong><%= notice%></strong>
    </div>
<%elsif !flash[:notice].nil?%>
    <div class="alert alert-success">
        	<button type="button" class="close" data-dismiss="alert">×</button>
        	<strong><%= flash[:notice]%></strong>
    </div>
<%end%>