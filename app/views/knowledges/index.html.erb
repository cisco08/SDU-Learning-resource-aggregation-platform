<p id="notice"><%= notice %></p>

<h1>Knowledges</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>User</th>
      <th>Type</th>
      <th>Content</th>
      <th>Good</th>
      <th>Bad</th>
      <th>Reply</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @knowledges.each do |knowledge| %>
      <tr>
        <td><%= knowledge.course %></td>
        <td><%= knowledge.user %></td>
        <td><%= knowledge.type %></td>
        <td><%= knowledge.content %></td>
        <td><%= knowledge.good %></td>
        <td><%= knowledge.bad %></td>
        <td><%= knowledge.reply %></td>
        <td><%= link_to 'Show', knowledge %></td>
        <td><%= link_to 'Edit', edit_knowledge_path(knowledge) %></td>
        <td><%= link_to 'Destroy', knowledge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

