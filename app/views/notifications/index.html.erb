<% provide(:title, "通知列表") %>
<div class="container-fluid-full">
  <div class="row-fluid">
    <%= render 'users/aside' %>
    <div id="content" class="span8">
        <div class="row-fluid">
        <%= render 'layouts/flash' %>
        </div>
        <div class="row-fluid offset1">
            <h1>通知列表</h1>
            
        </div>
        <div class="row-fluid ">
            <div class="span8">
               <hr style="background-color:grey"/> 
            </div>
            
        </div>
        <div class="row-fluid user-info-detail offset1">
            <div class="span4">
                <p>性别：<%= @user.sex %></p>
                <p>年级：<%= "#{@user.grade}级" if @user.grade!=0%></p>
                <p>学院：<%= @user.department %></p>
            </div>
            <div class="span4">
                <p>年龄：<%= Time.now.year - @user.birthday.year if @user.birthday%></p>
                <p>班级：<%= "#{@user.user_class}班" if @user.user_class!="空"%></p>
                <p>专业：<%= @user.speciality %></p>
                
            </div>
        </div>
        
        <div class="row-fluid">
            <div style="padding:30px"></div>
        </div>
        <div class="row-fluid user-info-detail user-info-detail-inline offset1">
            <div class="span8">
                <p>个人介绍：</p>
                <p>
                    <%=@user.self_introduce%>
                </p>
            </div>
        </div>
        
        <div class="row-fluid">
            <div style="padding:30px"></div>
        </div>
        <div class="row-fluid user-info-detail offset1">
            <div class="span8">
                <p>感兴趣的领域：</p>
            </div>
            <div class="span8">
                <ul>
                    <li><p><%= "计算机：计算机网络，计算机组成原理，并行计算，机器学习"%></p></li>
                    <li><p><%= "数学：离散数学，线性代数"%></p></li>
                </ul>
            </div>
        </div>
        
    <div style="height:500px"/>
    </div>
  </div>
</div>