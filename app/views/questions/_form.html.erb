<h1>问题发布</h1>
<div class="release_question">
  <%= form_for :question,:url => { :controller=>"questions",:action => "create"}, method: :post do |f| %>
  <%= current_user.username%>
  <%= f.hidden_field:creator_id , :value => current_user.id %>
  <%= f.hidden_field:type,:value => 'Question' %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  
  <% for keyword in @keywords %>  
  <div>  
    <%#= check_box_tag "questions[keyword_ids][]", keyword.id, @product.categories.include?(category) %>  
    <%= keyword.name %>  
  </div>  
  <% end %>    

  <%= f.hidden_field:good,:value => 0 %>

  <%= f.hidden_field:bad,:value => 0 %>

  <div class="actions">
    <%= f.submit "发布" %>
  </div>
<% end %>

</div>
