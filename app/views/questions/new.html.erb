<h1>问题发布</h1>
<div class="release_question">
  <%= form_for :questions  do |f| %>
 
  <%= f.hidden_field:course_id,:value => @course.id %>
 
  <%= f.hidden_field:user_id,:value => current_user %>

  <%= f.hidden_field:type,:value => "Question" %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  
  <%# for keyword in Keywords.find(:all) %>  
  <div>  
    <%#= check_box_tag "questions[keyword_ids][]", keyword.id, @product.categories.include?(category) %>  
    <%#= keyword.name %>  
  </div>  
  <%# end %>    

  <%= f.hidden_field:good,:value => 0 %>

  <%= f.hidden_field:bad,:value => 0 %>

  <%= f.hidden_field:reply,:value => nil %>

  
  <div class="actions">
    <%= f.submit "发布" %>
  </div>
<% end %>

</div>
