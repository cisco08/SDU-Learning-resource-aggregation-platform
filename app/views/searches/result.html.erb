<%= form_tag(searches_result_url,method:"GET") do%>
  <div style="text-align:center;">
    <br />
    <div class="field">
      <%= text_field :key ,params[0], class: 'form-control',value: params[:key][0],style:"width:320px;font-size:large;height:25px"%><br />
    </div>
    <div class="field">
      查询内容：
      <%= select_tag :find,options_for_select(["全部","专栏","问题","资源","用户"],params[:find]),style:"width:80px" %>
      &nbsp;&nbsp;&nbsp;&nbsp;
      排序依据：
      <%= select_tag :sort,options_for_select(["默认","上传时间","推荐程度"],params[:sort]),style:"width:80px" %><br />
      <%= submit_tag " 搜索 " , class: "btn btn-primary",style:"font-size:large"%>
    </div>
      
  </div>
<% end %>
<div>
  <div class="row-fluid">
    <%if @members%>
      <%@members.each do|q| %>
        <div class="row-fluid">
          <%= render :partial => "member_each", :locals =>{:q => q} %>
        </div>
      <%end%>
    <%end%>
    <%if @results%>
      <%@results.each do|q| %>
        <div class="row-fluid">
          <%= render :partial => "blog_each", :locals => { :q => q } %> 
        </div>
      <%end%>
    <%end%>
    
  </div>
  <%if @results.nil?%>
    <div class="row-fluid">
      <div class="span8 offset3" style="padding-bottom:50px">
          <%= will_paginate @members %>
      </div>
    </div>
  <%else%>
    <div class="row-fluid">
      <div class="center" style="padding-bottom:50px">
          <%= will_paginate @results %>
      </div>
    </div>
  <%end%>
  
</div>

