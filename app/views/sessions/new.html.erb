<% provide(:title, '登录') %>
<div style="height:200px"></div>
<div class="row-fluid sortable">
    <div class="span12">
        <div class="span2 offset5">
            <h1 class="center">登录</h1>
        </div>
    </div>
</div>

<hr style="color:black"/>

<div class="row-fluid sortable">
    <div class="span5 offset4">
        <%= form_for(:session, url: login_path, html:{class: "form-horizontal"}) do |f| %>
            <fieldset>
                <div class="control-group">
                    <%= f.label :username, "用户名：", class: "control-label"%>
				  <div class="controls">
				  	<%= f.text_field :username, class: 'input-xlarge focused'%>
				  </div>
				</div>
				<div class="control-group">
                    <%= f.label :password, "密码：", class: "control-label"%>
				  <div class="controls">
				  	<%= f.password_field :password, class: 'input-xlarge'%>
				  </div>
				</div>
				
				<div class="span8">
					<div class="center offset1">
					  	<%= f.label :remember_me, class: "checkbox inline" do %>
					  		<%= f.check_box :remember_me %>
	                		<span>记住登录</span>
					  	<% end %>
				  	</div>
				</div>
				<div class="span9">
					
				  	<br/>
					<div class="center">
					  	<%= f.submit "登录", class: "btn btn-primary" %>
					</div>
					<br/>
					<div class="center">
	            		<p>新用户? <%= link_to "点击这里注册", "#", class: "wb"%></p>
	            	</div>
            	</div>
            </fieldset>
        <% end %>

        
    </div>
</div>