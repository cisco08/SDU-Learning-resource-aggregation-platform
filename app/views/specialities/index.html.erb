

<% provide(:title, '专业管理') %>
<div class="container-fluid-full"> 
    <!--headerleft --> 
    <div class="row-fluid">

      <%= render :partial => "admins/row_nav" %>



      <div id="content" class="span10">
      <p id="notice"><%= notice %></p>

      <h1>全部专业</h1>
      <hr>
      
      <table class="table table-hover">
        <thead>
          <tr>
            <th>专业编号</th>
            <th>专业名称</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @specialities.each do |speciality| %>
            <tr>
              <td><%= speciality.id %></td>
              <td><%= speciality.name %></td>
              <td><%= link_to '详情', speciality %></td>
              <td><%= link_to '编辑', edit_speciality_path(speciality) %></td>
              <td><%= link_to '删除', speciality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      <%= link_to '新增专业', new_speciality_path %>
        
       
    </div> 
    </div>
</div> 

<div class="clearfix"></div>
