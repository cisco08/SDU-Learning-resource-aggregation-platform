<% provide(:title, '专业详情') %>

<div class="container-fluid-full"> 
    <!--headerleft --> 
    <div class="row-fluid">
      <div id="header">
          
      </div> 
  
      <!--<div id="sidebar-left" class="span2">-->
      <%= render :partial => "admins/row_nav" %>
      <!--</div> -->
  

      <div id="content" class="span10">
        <p id="notice"><%= notice %></p>

<div class="row-fluid">
  <div class="span7">
        <h3>专业</h3>
        <h1>
          <strong>
            <%=@speciality.name %>

          </strong>
          
        </h1>
  </div>
  <div class="span5">
        <h4>所属学院</h4>
        <h1>
         <%if @department.nil? %>
            <%=  '暂无'%>
            <%else%>
            <%=   @department.name%>
            <%end%>
          
        </h1>
  </div>
        <hr>
        
</div>
        <table class="table table-hover">
          <h3>下属课程</h3>
          <thead>
            <tr>
              <th>课程序号</th>
              <th>课程名</th>
              <th colspan="1"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.id %></td> 
                <td><%= course.course_name %></td>
                <!--<td><%#= link_to 'Show', department %></td>-->
                <!--<td><%#= link_to 'Edit', edit_department_path(department) %></td>-->
                <td><%= link_to '删除关联', specialities_deleteCourseDeptAss_path(@speciality,course), data: { confirm: 'Are you sure????' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <%= link_to '编辑...', edit_speciality_path(@speciality) %> |
        <%= link_to '新增下属课程', specialities_newcourseass_path(@speciality) %> |
        <%= link_to '返回', specialities_path %> 

      </div> 
    </div>
</div> 

<div class="clearfix"></div>
