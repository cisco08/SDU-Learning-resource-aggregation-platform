<% provide(:title, "#{@teacher.nickname}—学生贡献统计") %>
<div class="container-fluid-full"> 

    <div class="row-fluid">
      <%= render :partial => "users/aside" %>
      <div id="content" class="span8">
        <p id="notice"><%= notice %></p>
        
        <h1><%=@course.course_name%></h1>
        <hr>
        
        <table class="table table-hover">
          <thead>
            <tr>
              <th>学生序号</th>
              <th>学生昵称</th>
              <th>总获赞量</th>
              <th>提问数</th>
              <th>回答数</th>
              <th>专栏数</th>
              <th>资源数</th>

            </tr>
          </thead>
        
          <tbody>
            <% @students.each do |student| %>
              <tr>
                <td><%= @student.id %></td>
                <td><%= @student.nickname %></td>
                <td><%= "暂无" %></td>
                <td><%= "暂无" %></td>
                <td><%= "暂无" %></td>
                <td><%= "暂无" %></td>
                <td><%= "暂无" %></td>

              </tr>
            <% end %>
          </tbody>
        </table>
        
        <br>
        

      </div>
    </div>
</div> 

<div class="clearfix"></div>