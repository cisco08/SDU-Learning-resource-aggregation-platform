        


<% provide(:title, '全部教师') %>
<div class="container-fluid-full"> 

    <div class="row-fluid">
      <%= render :partial => "admins/row_nav" %>
      <div id="content" class= "row-fluid shadow-box min-height-control" data-min-height='680'>
        <p id="notice"><%= notice %></p>
        
        <h1>全部教师</h1>
        <hr>
        
        <table class="table table-hover">
          <thead>
            <tr>
              <th>序号</th>
              <th>教师用户名</th>
              <th>教师姓名</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @teachers.each do |teacher| %>
              <tr>
                <td><%= teacher.id %></td>
                <td><%= teacher.username %></td>
                <td><%= teacher.nickname %></td>
                <td><%= link_to '详情', teacher_path(teacher) %></td>
                <td><%= link_to '删除', teachers_destroy_path(teacher.id), data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <br>
        
        <%= link_to '新增教师', teachers_new_path %>
      </div> 
    </div>
</div> 

<div class="clearfix"></div>
