<% provide(:title, "#{@teacher.nickname}—教师管理后台") %>
<div id="container-fluid-full"> 

    <div id="row-fluid">
      <%= render :partial => "users/aside" %>
      <div id="content" class="span8">
        <p id="notice"><%= notice %></p>
        
        <h1>全部教授课程</h1>
        <hr>
        
        <table class="table table-hover">
          <thead>
            <tr>
              <th>序号</th>
              <th>课程名</th>
              <th colspan="2"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.id %></td>
                <td><%= course.course_name %></td>

                <td><%= link_to '课程资源管理', teacher_path(course) %></td>
                <td><%= link_to '学生贡献统计', teachers_detials_path(course.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <br>
        

      </div>
    </div>
</div> 

<div class="clearfix"></div>