<% provide(:title, "#{@teacher.nickname}—上传资源审核") %>
<div class="container-fluid-full"> 

    <div class="row-fluid">
      <%= render :partial => "users/aside" %>
      <div id="content" class= "row-fluid shadow-box min-height-control" data-min-height='680'>
        <p id="notice"><%= notice %></p>
        
        <h1>上传资源审核</h1>
        <hr>
        
        <table class="table table-hover">
          <thead>
            <tr>
              <th>序号</th>
              <th>课程名</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.id %></td>
                <td><%= link_to course.course_name, course%></td>

                <!--<td><%#= link_to '问答', teachers_questions_manage_path(@teacher.id,course.id) %></td>-->
                <td><%= link_to '专栏', teachers_blogs_check_path(@teacher.id,course.id) %></td>
                <td><%= link_to '资源', teachers_resources_check_path(@teacher.id,course.id) %></td>
                <!--<td><%#= link_to '学生贡献统计', teachers_detials_path(course.id) %></td>-->
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <br>
        
      <div class="" style="padding-bottom:650px"></div>
      </div>
    </div>
</div> 

<div class="clearfix"></div>