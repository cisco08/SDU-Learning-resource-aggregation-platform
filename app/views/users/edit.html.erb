<% provide(:title, "个人信息修改") %>
<div class="container-fluid-full">
  <div class="row-fluid">
    <%= render 'users/aside' %>
    <div id="content" class="span8">
        <div class="row-fluid">
        <%= render 'error_messages' %>
        </div>
        <div class="row-fluid offset1" style="padding-left:40px">
            <div class="span1">
                <section class="user_info">
                    <h1 style = "">
                        <%= gravatar_for @user, size: 120 %>
                    </h1>
                </section>
            </div>
            <div class="span3 user-info-digest">
                <h3><%= @user.nickname%></h3>
                <hr/>
                <p>电子邮箱：<%=@user.email%></p>
                <p>手机号：<%=@user.phone_number%></p>
            </div>
            
        </div>
        <div class="row-fluid ">
            <div class="span8">
               <hr style="background-color:grey"/> 
            </div>
            
        </div>
        <%= form_for @user,html:{class: "user-form"} do |f|%>
        <div class="row-fluid user-info-detail offset1">
            <div class="span4">
                <div class="user-form-controller">
                    <p class="inline-block" style="padding-right:20px">性别:</p>
                    <%=f.text_field :sex, class: "inline-block input"%>
                </div>
                <div class="user-form-controller">
                    <p class="inline-block" style="padding-right:20px">年级:</p>
                    <%=f.number_field :grade, class: "inline-block input"%>
                    <p class="inline-block" style="padding-right:20px">级</p>
                </div>
                <div class="user-form-controller">
                    <p class="inline-block" style="padding-right:20px">学院:</p>
                    <%=f.text_field :department, class: "inline-block input"%>
                </div>
            </div>
            <div class="span4">
                <div class="user-form-controller">
                    <p class="inline-block" style="padding-right:20px">生日:</p>
                    <%=f.date_field :birthday, class: "inline-block input"%>
                </div>
                <div class="user-form-controller">
                    <p class="inline-block" style="padding-right:20px">班级:</p>
                    <%=f.number_field :user_class, class: "inline-block input"%>
                    <p class="inline-block" style="padding-right:20px">班</p>
                </div>
                <div class="user-form-controller">
                    <p class="inline-block" style="padding-right:20px">专业:</p>
                    <%=f.text_field :speciality, class: "inline-block input"%>
                </div>
                
            </div>
        </div>
        
        <div class="row-fluid">
            <div style="padding:30px"></div>
        </div>
        <div class="row-fluid user-info-detail user-info-detail-inline offset1">
            <div class="span8">
                <div class="user-form-controller">
                    <p class="inline-block" style="padding-right:20px">个人介绍：</p>
                    <%=f.text_area :self_introduce, class: "input", style:"height:50px;width:700px"%>
                </div>
            </div>
        </div>
        
        <div class="row-fluid">
            <div style="padding:30px"></div>
        </div>
        <div class="row-fluid user-info-detail offset1">
            <div class="span8">
                <p>感兴趣的领域：</p>
            </div>
            <div class="span8">
                <ul>
                    <li><p><%= "计算机：计算机网络，计算机组成原理，并行计算，机器学习"%></p></li>
                    <li><p><%= "数学：离散数学，线性代数"%></p></li>
                </ul>
            </div>
        </div>
        <div class="row-fluid user-info-detail offset1">
            <div class="span7 center">
                <%= f.submit "更新", class:"btn btn-primary"%>
            </div>
        </div>
        <%end%>
        <div class="row-fluid">
            <div style="height:250px"></div>
        </div>
    </div>
  </div>
</div>