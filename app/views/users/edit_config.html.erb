<% provide(:title, "个人设置修改") %>
<div class="container-fluid-full">
  <div class="row-fluid">
    <%= render 'users/aside' %>
    <div id="content" class="span8">
        <div class="row-fluid">
        <%= render 'layouts/flash' %>
        </div>
        <div class="row-fluid offset1" style="padding-left:40px">
            <div class="span1">
                <section class="user_info">
                    <h1 style = "">
                        <%= gravatar_for @user, size: 120 %>
                    </h1>
                </section>
            </div>
            <div class="span3 user-info-digest">
                <h3><%= @user.nickname%></h3>
                <hr/>
                <p>电子邮箱：<%=@user.email%></p>
                <p>手机号：<%=@user.phone_number%></p>
            </div>
            
        </div>
        <div class="row-fluid ">
            <div class="span8">
               <hr style="background-color:grey"/> 
            </div>
            
        </div>
        <div class="row-fluid user-info-detail">
          <div class="box-content no-content span6" style="padding-left:5%">
            <%= form_tag update_config_user_path(@user), method: "post", class: "form-horizontal" do %>
              <fieldset>
                <h3>通知设置</h3>
                <hr style="background-color:grey"/>
                <p>课程通知</p>
                <div class="control-group">
                  <%= check_box :user_config, :course_blog, class: 'plain-label'%>
        				  <%= label_tag :course_blog, "关注课程有新专栏时提醒", class: "plain-label"%>
        				</div>
        				<div class="control-group">
        				  <%= check_box :user_config, :course_question, class: 'plain-label'%>
                  <%= label_tag :course_question, "关注课程有新问题时提醒", class: "plain-label"%>
        				</div>
        				<div class="control-group">
        				  <%= check_box :user_config, :course_resource, class: 'plain-label'%>
        				  <%= label_tag :course_resource, "关注课程有新下载资源时提醒", class: 'plain-label'%>
        				</div>
        				<p>资源通知</p>
                <div class="control-group">
                  <%= check_box :user_config, :knowledge_reply, class: 'plain-label'%>
        				  <%= label_tag :knowledge_reply, "关注资源有新回复时通知", class: "plain-label"%>
        				</div>
        				<hr/>
        				<div class="center">
					  	    <%= submit_tag "提交", class: "btn btn-primary" %>
					      </div>
        			</fieldset>
            <% end %>
          </div>
        </div>
        
        
    <div style="height:600px"/>
    </div>
  </div>
</div>