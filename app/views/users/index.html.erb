<% provide(:title, '用户管理') %>
<div class="container-fluid-full"> 

    <div class ='row-fluid'>
      <%= render :partial => "admins/row_nav" %>
      <div id="content" class="span8">
        <p id="notice"><%= notice %></p>
        
        <h1>用户管理</h1>
        <hr>
        
        <table class="table table-hover">
          <thead>
            <tr>
              <th>序号</th>
              <th>用户名</th>
              <th>用户昵称</th>
              <th>用户状态</th>
              <!--<th>Course</th>-->
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.nickname %></td>
                <% unless user.ban%>
                  <td>正常</td>
                <% else %>
                  <td>封禁</td>
                <% end %>
                <!--<td><%#= link_to '已关联课程',"#" %></td>-->
                <td><%= link_to '详情', user %></td>
                <% if user.ban %>
                  <td><%= link_to '解封', unban_user_path(user), remote: true%></td>
                <% else %>
                  <td><%= link_to '封禁', ban_user_path(user), remote: true%></td>
                <% end %>
                <td><%= link_to '删除', delete_user_path(user), data: { confirm: 'Are you sure?' }, remote: true%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <br>
        
      </div> 
    </div>
</div> 
<div class="center">
  <%= will_paginate @users%>
</div>

<div class="clearfix"></div>
