<% provide(:title, "#{@user.nickname}的个人主页") %>
<div class="row">
    <div style:"background-color: green; weight:200px;height: 50px"></div>
</div>
<div class="row">
    <aside class="col-md-4" style="padding-left:400px">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user%>
                <%= @user.nickname %>
            </h1>
        </section>
    </aside>
    <div class="col-md-8">
        <h3><%= @user.nickname%></h3>
        <hr/>
        <p>电子邮箱：<%=@user.email%></p>
        <p>手机号：<%=@user.phone_number%></p>
    </div>
</div>